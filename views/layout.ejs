<html>
<head>
    <title><%= title %></title>
    <link rel="stylesheet" href="https://code.jquery.com/jquery-3.6.0.min.js">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js"></script>

    <script src= "https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <link rel="stylesheet" href="<%= assetPath('css/layout.css') %>">
    <link rel="stylesheet" href="<%= assetPath('css/header.css') %>">
    <link rel="stylesheet" href="<%= assetPath('css/footer.css') %>">
    <%-style %>
</head>
<body>
    <%- include('_header'); %>
        <main id="layout-main">
            <%- body %>
        </main>
        <%- include('_footer'); %>
            <%- script %>
                <script>
                 <% if (flash.success && flash.success.length > 0) { %>
                        //from default and option of noty website
                        new Noty({
                            theme: ' relax ',
                            text: '<%= flash.success %>',
                            type: 'success',
                            layout: 'topRight',
                            timeout: 1500
                        }).show()
                        <% } %>

                <% if (flash.error && flash.error.length > 0) { %>
                //from default and option of noty website
                        new Noty({
                            theme: ' sunset ',
                            text: '<%= flash.error %>',
                            type: 'success',
                            layout: 'topRight',
                            timeout: 1500
                        }).show()
                        
                        <% } %>

                </script>
</body>
</html>
